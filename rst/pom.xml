        <org.wildfly.version>10.0.0.Final</org.wildfly.version>
        <org.jboss.spec.javaee.version>1.0.3.Final</org.jboss.spec.javaee.version>

        <!-- WildFly Maven plug-in to deploy your WAR to a local WildFly container -->
